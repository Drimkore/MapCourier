@model IEnumerable<MapCourier.Models.Storage>

@{
    ViewData["Title"] = "Index";
}
<div div class="divb" style="margin: 0 auto; width: 90%; justify-content:space-between">
    <h1>Склады</h1>
    <a asp-action="Create" class="floating-button"  style="margin:0">Добавить</a>
</div>


<table border="1" cellpadding="0" cellspacing="0">
    <thead class="heading-table">
        <tr style="border: 2px solid black">
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.storageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.storageAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <input type="button" id="@item.StorageID" onclick="VisibilityOfMenu(this.id)" value="false" hidden/>
                <label for="@item.StorageID" class="block"></label>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.storageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.storageAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
        </tr>
        <tr id="result_tr @item.StorageID" style="display: none;">
            <td colspan="5" style="padding: 0">
                <div style="display: flex; flex-direction: column">
                    <div style="border-bottom: 2px solid black; padding: 5px 0">
                        <a asp-action="Edit" asp-route-id="@item.StorageID" class="floating-button">Изменить</a>
                        <a asp-action="Details" asp-route-id="@item.StorageID" class="floating-button">Сведения</a>
                        <a asp-action="Delete" asp-route-id="@item.StorageID" class="floating-button">Удалить</a>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    function VisibilityOfMenu(idTr)
    {
        let name = 'result_tr' + ' ' + idTr;
        var result_style = document.getElementById(name).style;
        if (document.getElementById(idTr).value == "false")
        {
            result_style.display = 'contents';
            document.getElementById(idTr).value = "true";

        }
        else
        {
            result_style.display = 'none';
            document.getElementById(idTr).value = "false";
        }
    }
</script>
