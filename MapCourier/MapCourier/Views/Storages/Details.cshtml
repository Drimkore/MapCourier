@model MapCourier.Models.Storage

@{
    ViewData["Title"] = "Details";
}
<div style="margin: 0 auto; width: 90%">
    <h1>Сведения о складе</h1>
</div>


<div class="diva">
    <table class="tabled">
        <tr>
            <th >
                @Html.DisplayNameFor(model => model.storageName)
            </th>
            <td>
                @Html.DisplayFor(model => model.storageName)
            </td>
            
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.storageAddress)
            </th>
            <td>
                @Html.DisplayFor(model => model.storageAddress)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <td>
                @Html.DisplayFor(model => model.Longitude)
            </td>
        </tr>
        <tr>
           <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <td>
                @Html.DisplayFor(model => model.Latitude)
            </td>
        </tr>
     
    </table>


<div class="divb">
    <a asp-action="Edit" asp-route-id="@Model?.StorageID" class="floating-button">Изменить</a>
    <a asp-action="Index" class="floating-button">Назад</a>
</div>
</div>
